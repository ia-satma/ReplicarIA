# ============================================================
# ReplicarIA Frontend - Environment Variables
# ============================================================
# Copy this file to .env and configure your values

# Backend API URL (leave empty for same-origin requests via proxy)
REACT_APP_BACKEND_URL=

# Optional: CORS origin for development
CORS_ORIGIN=http://localhost:3000

# Backend proxy target (used in craco.config.js)
BACKEND_URL=http://localhost:5000

# Optional: Disable hot reload for stability
# DISABLE_HOT_RELOAD=true

# Optional: Enable visual editing features
# REACT_APP_ENABLE_VISUAL_EDITS=true

# Optional: Enable health check endpoints
# ENABLE_HEALTH_CHECK=true

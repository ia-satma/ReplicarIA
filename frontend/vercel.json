{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://backend-production-ceb1.up.railway.app/api/:path*"
    },
    {
      "source": "/((?!static|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://backend-production-ceb1.up.railway.app",
    "REACT_APP_ENVIRONMENT": "production",
    "REACT_APP_NAME": "Revisar.IA"
  }
}

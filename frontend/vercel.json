{
  "version": 2,
  "name": "revisar-ia",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://backend-production-ceb1.up.railway.app/api/:path*"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/logo(.*)",
      "dest": "/logo$1"
    },
    {
      "src": "/mascot.webp",
      "dest": "/mascot.webp"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|webp|svg|ico|css|js|json|woff|woff2|ttf|eot|mp4|webm|ogg))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://backend-production-ceb1.up.railway.app",
    "REACT_APP_ENVIRONMENT": "production",
    "REACT_APP_NAME": "Revisar.IA"
  }
}

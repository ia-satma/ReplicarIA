modules = ["nodejs-20", "web", "bash", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_anthropic_ai_integrations:1.0.0", "sendgrid:1.0.0", "python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "poppler", "poppler_utils", "postgresql", "swig", "tesseract", "xcbuild", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn server:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && uvicorn server:app --host 0.0.0.0 --port 5000"]
build = ["npm", "run", "build", "--prefix", "frontend"]

[userenv]

[userenv.shared]
ENABLE_QUERY_ROUTER = "true"
ROUTER_DEFAULT_TIER = "medium"

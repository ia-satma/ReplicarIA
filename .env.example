# ============================================================
# ReplicarIA - Environment Variables
# ============================================================
# Copia este archivo a .env y configura tus valores

# === AI/LLM API Keys ===
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# === Database - MongoDB ===
# Para desarrollo con Docker:
MONGO_URL=mongodb://admin:replicaria2024@localhost:27017/agent_network?authSource=admin
DB_NAME=agent_network
# Docker settings
MONGO_USER=admin
MONGO_PASSWORD=replicaria2024

# === Database - PostgreSQL ===
# Para desarrollo con Docker:
DATABASE_URL=postgresql://replicaria:replicaria2024@localhost:5432/replicaria
# Docker settings
POSTGRES_USER=replicaria
POSTGRES_PASSWORD=replicaria2024
POSTGRES_DB=replicaria

# === Admin User (para seed inicial) ===
# IMPORTANTE: Cambia estos valores en produccion!
ADMIN_EMAIL=admin@tuempresa.com
ADMIN_PASSWORD=CambiaEstaPasword123!
ADMIN_NAME=Administrator
ADMIN_COMPANY=TuEmpresa

# === Email - DreamHost/SMTP ===
DREAMHOST_EMAIL_PASSWORD=your-email-password
DREAMHOST_EMAIL_USER=noreply@tudominio.com
DREAMHOST_SMTP_HOST=mail.tudominio.com
DREAMHOST_SMTP_PORT=587

# === Email - Gmail API (opcional) ===
# Requiere configurar OAuth en Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# === Security ===
# Genera una clave segura con: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === CORS ===
# En desarrollo: *
# En produccion: https://tudominio.com,https://www.tudominio.com
CORS_ORIGINS=*

# === Query Router (opcional) ===
ENABLE_QUERY_ROUTER=true
ROUTER_DEFAULT_TIER=standard

# === Redis (opcional, para cache) ===
REDIS_URL=redis://localhost:6379

# === Frontend ===
# Solo necesario si el frontend se ejecuta en un dominio diferente
REACT_APP_BACKEND_URL=http://localhost:5000

# === Entorno ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
